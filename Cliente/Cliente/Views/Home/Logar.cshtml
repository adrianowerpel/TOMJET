@if (ViewBag.Aviso != String.Empty)
{
    <script type="text/javascript">
        toastr["success"]("@ViewBag.Aviso", "Aviso!");
    </script>
}

@{
    ViewBag.Title = "Logar";
}

<h2>Logar</h2>

<hr/>

@using (Html.BeginForm("VerificarLogin", "Home", FormMethod.Post))
{
    @Html.Label("", htmlAttributes: new { @class = "control-label" })
    {
        <table>
            <tr>
                <th>
                    Login
                </th>
                <th>
                    Senha
                </th>
                <th></th>
            </tr>

            <tr>
                <td>
                    <input type="text" placeholder="Login" id="txtCidadeOrigem" name="login" class="form-control" />
                </td>
                <td>
                    <input type="password" placeholder="Senha" id="txtCidadeDestino" name="senha" class="form-control" />
                </td>
                <td>
                    <input type="submit" value="Logar" class="btn btn-success" />
                </td>
            </tr>
        </table>
    }
}

<hr/>

<div>
    @Html.ActionLink("Voltar aos Voos", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


